<% @title = 'アカウント情報' %>
<h1><%= @title %></h1>

<div class="row">
	<div class="card-panel col s8 offset-s2">
		<div class="row">
  <table class="centered highlight">
      <tr>
          <th>氏名</th>
          <td>
            <%= @staff_member.family_name %>
            <%= @staff_member.given_name %>
          </td>
       </tr>
       <tr>
       	<th>フリガナ</th>
       	<td>
       	<%= @staff_member.family_name_kana %>
       	<%= @staff_member.given_name_kana %>
       	</td>
       </tr>
       <tr>
       	<th>メールアドレス</th>
       	<td>
       		<%= @staff_member.email %>
       	</td>
       </tr>
       <tr>
                 <th>開始日</th>
       	<td>
       		<%= @staff_member.start_date %>
       	</td>
       </tr>
  </table>
  <%= link_to("アカウント情報編集", :edit_staff_account, class: 'waves-effect waves-light btn-large') %>
		</div>
	</div>
</div>
