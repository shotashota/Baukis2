<header>
	<%= link_to("BAUKIS", :staff_root , class: 'logo-mark') %>
	<%= content_tag(:span, flash.notice, class: 'notice') %>
	<%= content_tag(:span, flash.alert, class: 'alert') %>
	<%= if current_staff_member
			 link_to("ログアウト", {controller: :sessions, action: :destroy}, method: :delete)
		else
			link_to('ログイン', {controller: :sessions, action: :new})
	end %>
	<%= link_to("アカウント", :staff_account) if current_staff_member %>
</header>